@model IEnumerable<TabloidMVC.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <img class="masthead-avatar mb-2" src="~/assets/logo_transparent.png" alt="">
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <h2 class="pre-wrap masthead-subheading font-weight-light mb-0">BLOGS & JOURNALS</h2>
    </div>
</header>

<div class="text-center container mt-5">
    <h2 class="page-section-heading text-secondary d-inline-block mb-0">GET STARTED</h2>
    <!-- Icon Divider-->
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
        <div class="divider-custom-line"></div>
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="row justify-content-center">
            <a class="btn btn-primary btn-lg" asp-controller="account" asp-action="login">LOGIN</a>
        </div>
        <div class="row justify-content-center">
            <a class="btn btn-primary btn-lg" asp-controller="Account" asp-action="Register">Register</a>
        </div>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <h1>Posts From Subscriptions</h1>
        @if (!Model.Any())
        {
            <h3>Go subscribe to authors! Posts will appear here</h3>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Published
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserProfile.DisplayName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PublishDateTime)
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="Post" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-controller="Post" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-action="Delete" asp-controller="Post"  asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>
